# change keybindings
xmodmap=~/.xmodmap
if [ \( -n "$DISPLAY" \) -a \( -e $xmodmap \) ]; then
  (xmodmap $xmodmap)
fi

# enviroment variables
## PATH
export PATH=$DOTDIR/script:$PATH
export PATH=$TOOLDIR/bin:$PATH
export PERLBREW_ROOT=$TOOLDIR/perlbrew

export PAGER='less -R'

# read a local profile file.
local=$DOTDIR/shell/bash/profile.local
if [ -e $local ]; then
  . $local
fi

if [ -n "$EMACS" ]; then
  export EDITOR=$EMACS
fi

# OPAM
eval `opam config env`
export OCAML_ANNOT=1

. /home/lab8/t-sekiym/.opam/opam-init/init.sh > /dev/null 2> /dev/null || true

# CABAL
cabal_path=$HOME/.cabal/bin
if [ -d "$cabal_path" ]; then
  export PATH=$cabal_path:$PATH
fi
